# Telegram Bot Token from @BotFather
BOT_TOKEN=your_telegram_bot_token_here

# MEGA.nz credentials (optional for public folders, required for private)
MEGA_EMAIL=your_mega_email@example.com
MEGA_PASSWORD=your_mega_password

# Storage path for temporary downloads
STORAGE_PATH=/downloads

# Maximum file size in bytes (2GB default for Telegram limit)
MAX_FILE_SIZE=2147483648

# Retry settings
MAX_RETRIES=5
RETRY_DELAY=60
